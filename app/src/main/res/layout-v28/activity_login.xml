<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:backgroundTint="@color/white"
    tools:context=".feature.ui.login.view.LoginActivity"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/logo_gray"
            android:textSize="20sp"
            android:lineHeight="25sp"
            android:text="kitsune"
            android:fontFamily="@font/outfit_medium"/>
        <TextView
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_purple"
            android:textSize="14sp"
            android:fontFamily="@font/outfit_medium"
            android:text="Esqueci minha senha"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:fontFamily="@font/outfit_semi_bold"
        android:text="Entre com sua conta como doador"/>

    <TextView
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="14sp"
        android:textColor="@color/black_title"
        android:fontFamily="@font/outfit_semi_bold"
        />

    <EditText
        android:id="@+id/email_et"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_textfield"
        android:paddingStart="12dp"

        android:hint="Digite seu email..."
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/outfit_regular" />

    <TextView
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Senha"
        android:textSize="14sp"
        android:textColor="@color/black_title"
        android:fontFamily="@font/outfit_semi_bold"
        />

    <EditText
        android:id="@+id/password_et"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_textfield"
        android:paddingStart="12dp"

        android:hint="Digite sua senha..."
        android:inputType="textPassword"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/outfit_regular" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/custom_button"

        android:text="Entrar"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/outfit_medium"
        android:textAllCaps="false"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/outfit_light"
            android:text="NÃ£o possui uma conta?"
            android:textAlignment="center"
            android:textColor="@color/black_title"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/criar_tv" />

        <TextView
            android:id="@+id/criar_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:fontFamily="@font/outfit_semi_bold"
            android:text="Criar uma conta"
            android:textAlignment="center"
            android:textColor="@color/secondary_red"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.appcompat.widget.LinearLayoutCompat>