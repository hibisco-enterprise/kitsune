<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/custom_dialog_background"
    android:backgroundTint="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="right"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hemocentro Santa casa de São Paulo"
            android:fontFamily="@font/outfit_medium"
            android:layout_weight="15"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:layout_marginRight="0dp"
            android:layout_gravity="right"
            android:id="@+id/btn_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/x"/>
    </LinearLayout>

    <TextView
        android:textColor="@color/gray_strong_text"
        android:id="@+id/tv_subtitle"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Santa casa de Misericórdia de São Paulo - Hospital Central"
        android:fontFamily="@font/outfit_regular"
        android:textSize="14sp"
        />

    <LinearLayout
        android:layout_marginTop="32dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12sp"
            android:fontFamily="@font/outfit_regular"
            android:textColor="@color/gray_weak_text"
            android:text="Endereço"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="17dp"
            android:textSize="14sp"
            android:textColor="@color/gray_strong_text"
            android:id="@+id/tv_address"
            android:text="R. Marquês de Itu, 579 - Vila Buarque, São Paulo - SP, 01223-001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_bar" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12sp"
            android:fontFamily="@font/outfit_regular"
            android:textColor="@color/gray_weak_text"
            android:text="Telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="17dp"
            android:textSize="14sp"
            android:textColor="@color/gray_strong_text"
            android:id="@+id/tv_phone"
            android:text="(11) 2176-7155"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_bar" />

    <TextView
        android:textSize="12sp"
        android:fontFamily="@font/outfit_regular"
        android:textColor="@color/gray_weak_text"
        android:text="Estoque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
       />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_o_neg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/estoque_vazio"/>
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O-"
                    />
                <TextView
                    android:id="@+id/tv_pct_o_neg"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/black"
                    android:text="4%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_a_neg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/estoque_vazio"/>
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A-"
                    />
                <TextView
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/black"
                    android:text="4%"
                    android:id="@+id/tv_pct_a_neg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_b_neg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/estoque_vazio"/>
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B-"
                    />
                <TextView
                    android:id="@+id/tv_pct_b_neg"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/black"
                    android:text="4%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_ab_neg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/estoque_vazio"/>
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AB-"
                    />
                <TextView
                    android:id="@+id/tv_pct_ab_neg"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/black"
                    android:text="4%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_o_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/estoque_vazio"/>
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O+"
                    />
                <TextView
                    android:id="@+id/tv_pct_o_pos"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/black"
                    android:text="4%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_a_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/estoque_vazio"/>
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A+"
                    />
                <TextView
                    android:id="@+id/tv_pct_a_pos"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/black"
                    android:text="4%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_b_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/estoque_vazio"/>
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B+"
                    />
                <TextView
                    android:id="@+id/tv_pct_b_pos"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/black"
                    android:text="4%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_ab_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/estoque_vazio"/>
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AB+"
                    />
                <TextView
                    android:id="@+id/tv_pct_ab_pos"
                    android:textSize="14sp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:textColor="@color/black"
                    android:text="4%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/custom_button"

        android:text="Agendar doação"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/outfit_medium"
        android:textAllCaps="false"/>
</LinearLayout>