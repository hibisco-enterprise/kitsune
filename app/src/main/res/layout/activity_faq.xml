<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"

    tools:context=".feature.ui.faq.view.FaqActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FAQ"
            android:textSize="24sp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/outfit_medium"
            android:textColor="@color/black_title"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dúvidas Comuns"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/outfit_medium"
            android:textColor="@color/gray_weak_text"
            android:textSize="14sp"
            />

        <LinearLayout
            android:id="@+id/question1"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/custom_gray_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_medium"
                android:textSize="14sp"
                android:text="Qual a importância da doação de sangue?"
                android:textColor="@color/black_title_sec"/>
            <TextView
                android:id="@+id/answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_regular"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                android:text="A doação de sangue é um compromisso social, pois o sangue é necessário para realização das cirurgias nas unidades hospitalares, pacientes em tratamento quimioterápico, pacientes com leucemia ou aqueles que realizaram transplantes no Centro de Transplante de Medula Óssea (CEMO)."
                android:textColor="@color/gray_subtitle_sec"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/question2"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/custom_gray_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_medium"
                android:textSize="14sp"
                android:text="O que é feito com o sangue que doamos?"
                android:textColor="@color/black_title_sec"/>
            <TextView
                android:id="@+id/answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_regular"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                android:text="Após a coleta, a bolsa de sangue é fracionada em componentes sanguíneos (concentrado de hemácias, de plaquetas e plasma). Esses componentes são liberados para uso somente após o resultado dos exames sorológicos. Uma única unidade doada pode beneficiar três pacientes."
                android:textColor="@color/gray_subtitle_sec"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/question3"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/custom_gray_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_medium"
                android:textSize="14sp"
                android:text="O que é preciso para doar sangue?"
                android:textColor="@color/black_title_sec"/>
            <TextView
                android:id="@+id/answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_regular"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                android:text="Podem doar sangue pessoas entre 16 e 69 anos e que estejam pesando mais de 50kg. Além disso, é preciso apresentar documento oficial com foto e menores de 18 anos só podem doar com consentimento formal dos responsáveis (acesse o formulário). Pessoas com febre, gripe ou resfriado, diarreia recente, grávidas e mulheres no pós-parto não podem doar temporariamente."
                android:textColor="@color/gray_subtitle_sec"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/question4"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/custom_gray_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_medium"
                android:textSize="14sp"
                android:text="Quem não pode doar sangue?"
                android:textColor="@color/black_title_sec"/>
            <TextView
                android:id="@+id/answer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_regular"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                android:text="Não podem doar sangue pessoas que tiveram hepatite após os 11 anos de idade, tenham evidência clínica ou laboratorial de doenças sexualmente transmissíveis, como hepatite B e C, aids (vírus HIV), doenças ligadas ao vírus HTLV I e II. Doenças de chagas, o uso de drogas ilícitas injetáveis e malária também são impedimentos definitivos para doar sangue."
                android:textColor="@color/gray_subtitle_sec"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Antes de doar sangue"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/outfit_medium"
            android:textColor="@color/gray_weak_text"
            android:textSize="14sp"
            />

        <LinearLayout
            android:id="@+id/question5"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/custom_gray_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_medium"
                android:textSize="14sp"
                android:text="É preciso levar algum documento de identidade para a doação de sangue?"
                android:textColor="@color/black_title_sec"/>
            <TextView
                android:id="@+id/answer5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_regular"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                android:text="Sim. O candidato deve apresentar documento original com foto, expedido pelo órgão oficial. Exemplos: Carteira de Identidade (RG ou RNE), passaporte, Carteira de Trabalho, Carteira de Identidade de Profissional, Carteira Nacional de Habilitação com foto e Certificado de Reservista."
                android:textColor="@color/gray_subtitle_sec"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/question6"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/custom_gray_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_medium"
                android:textSize="14sp"
                android:text="É necessário estar em jejum para doar sangue?"
                android:textColor="@color/black_title_sec"/>
            <TextView
                android:id="@+id/answer6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_regular"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                android:text="O doador não deve estar em jejum, mas é importante evitar alimentos gordurosos três horas antes da doação."
                android:textColor="@color/gray_subtitle_sec"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Durante a doação"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/outfit_medium"
            android:textColor="@color/gray_weak_text"
            android:textSize="14sp"
            />

        <LinearLayout
            android:id="@+id/question7"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/custom_gray_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_medium"
                android:textSize="14sp"
                android:text="Quanto tempo dura a doação de sangue?"
                android:textColor="@color/black_title_sec"/>
            <TextView
                android:id="@+id/answer7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_regular"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                android:text="O procedimento todo (cadastro, aferição de sinais vitais, teste de anemia, triagem clínica, coleta do sangue e lanche) dura em média 40 minutos."
                android:textColor="@color/gray_subtitle_sec"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/question8"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/custom_gray_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_medium"
                android:textSize="14sp"
                android:text="Doar sangue dói?"
                android:textColor="@color/black_title_sec"/>
            <TextView
                android:id="@+id/answer8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_regular"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                android:text="Percepção de dor é pessoal. É necessário puncionar a veia para retirada do sangue."
                android:textColor="@color/gray_subtitle_sec"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Após doar sangue"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/outfit_medium"
            android:textColor="@color/gray_weak_text"
            android:textSize="14sp"
            />

        <LinearLayout
            android:id="@+id/question9"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/custom_gray_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_medium"
                android:textSize="14sp"
                android:text="Quanto tempo organismo leva para repor o sangue doado?"
                android:textColor="@color/black_title_sec"/>
            <TextView
                android:id="@+id/answer9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_regular"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                android:text="O organismo repõe o volume de sangue doado nas primeiras 72 horas após a doação."
                android:textColor="@color/gray_subtitle_sec"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/question10"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/custom_gray_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_medium"
                android:textSize="14sp"
                android:text="Quantas vezes por ano posso doar sangue?"
                android:textColor="@color/black_title_sec"/>
            <TextView
                android:id="@+id/answer10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_regular"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                android:text="Para homens, o intervalo mínimo entre as doações é de 60 dias (com até quatro doações no período de 12 meses). Para mulheres, o intervalo mínimo é de 90 dias (com até três no período de 12 meses)."
                android:textColor="@color/gray_subtitle_sec"
                android:visibility="gone"/>

        </LinearLayout>






    </LinearLayout>

</ScrollView>