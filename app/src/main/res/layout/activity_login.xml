<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    tools:context=".feature.ui.Login.View.LoginActivity"
    android:padding="23dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/logo_gray"
            android:textSize="20sp"
            android:text="kitsune"
            android:fontFamily="@font/outfit_medium"/>
        <TextView
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_purple"
            android:textSize="14sp"
            android:fontFamily="@font/outfit_medium"
            android:text="Esqueci minha senha"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:fontFamily="@font/outfit_semi_bold"
        android:text="Entre com sua conta como doador"/>

    <TextView
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/outfit_semi_bold"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailET"
            android:textColor="@color/logo_gray"
            android:background="@color/white"
            android:textColorHint="@color/logo_gray"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite seu email" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Senha"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/outfit_semi_bold"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordET"
            android:background="@color/white"
            android:textColor="@color/logo_gray"
            android:textColorHint="@color/logo_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite sua senha"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:text="Entrar"
        android:textSize="16sp"
        android:fontFamily="@font/outfit_medium"
        android:textAllCaps="false"
        android:backgroundTint="@color/secondary_purple"
        android:background="@drawable/custom_button"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="16sp"
        android:fontFamily="@font/outfit_light"
        android:text="NÃ£o possui uma conta?"/>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_red"
        android:textAlignment="center"
        android:textSize="16sp"
        android:fontFamily="@font/outfit_semi_bold"
        android:text="Criar uma conta" />

</androidx.appcompat.widget.LinearLayoutCompat>